<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_ingredient_background"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ingredientNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredient Name"
            android:textStyle="bold"
            android:textColor="@color/green_dark" />

        <TextView
            android:id="@+id/ingredientCostText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$0.000/kg"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <Button
        android:id="@+id/removeIngredientBtn"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Ã—"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/button_remove_background"
        android:textColor="@android:color/white"
        android:minWidth="36dp"
        android:layout_gravity="center_vertical" />

</LinearLayout>