<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/ingredientItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/item_ingredient_background"
        android:clickable="true"
        android:focusable="true">

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/ingredientCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:buttonTint="@color/green_primary" />

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre del ingrediente -->
            <TextView
                android:id="@+id/ingredientNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredient Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <!-- Costos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/ingredientCostText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.000/kg"
                    android:textSize="14sp"
                    android:textColor="@color/blue_primary"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/ingredientCostPerTonneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$000/ton"
                    android:textSize="12sp"
                    android:textColor="@color/purple_primary"
                    android:background="@drawable/cost_badge_background"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

            </LinearLayout>

            <!-- Información nutricional resumida -->
            <TextView
                android:id="@+id/ingredientNutrientsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CP: 8.5% TDN: 89.0% NDF: 9.0%"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Botón de información -->
        <ImageButton
            android:id="@+id/ingredientInfoButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_info"
            android:background="@drawable/button_info_background"
            android:contentDescription="@string/ingredient_info"
            android:scaleType="centerInside"
            android:padding="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>